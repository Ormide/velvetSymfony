{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'row g-3'}}) }}

    <div class='col-12 col-md-6'>
        {{ form_label(form.name, 'Nom de l\'artiste')}}
        {{ form_widget(form.name)}}
        {{ form_errors(form.name)}}
        {{ form_help(form.name)}}
    </div>

    <div class='col-12 col-md-6'>
        {{ form_label(form.url, 'Site web')}}
        {{ form_widget(form.url)}}
        {{ form_errors(form.url)}}
        {{ form_help(form.url)}}
    </div>

    <div class='col-12 col-md-6'>
        {{ form_label(form.picture2, 'Image de l\'artiste')}}
        {{ form_widget(form.picture2)}}
        {{ form_errors(form.picture2)}}
        {{ form_help(form.picture2)}}
    </div>

    <div>
        <a class="btn btn-outline-dark rounded-pill" href='{{ path ('app_artist_index') }}'>Annuler</a>
        <button class="btn btn-outline-success rounded-pill">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
