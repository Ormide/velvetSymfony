{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <a class="btn btn-secondary rounded-pill my-1" href={{ path ('app_artist_index') }}>Retour</a>

    <div class='d-flex flex-column flex-md-row justify-content-md-between'>
        <div class='d-flex flex-column col-10 align-self-center flex-md-row'>
            <div class="col-md-4">
                <img class="img-fluid rounded" src="{{ asset ('images/artist/') }}{{ artist.picture }}" alt="{{ artist.name }}" title="{{ artist.name }}" width='268' heigth='268'>
            </div>

            <div class='ms-md-2 my-2 my-md-0 d-flex flex-column justify-content-between'>
                <div class=''>
                    <h1 class='m-0'>{{ artist.name }}</h1>
                    <a class='m-0 text-decoration-none' href='#'>{{ artist.url }}</a>
                </div>
                <div class=''>
                    <h2 class='m-0'><b>... </b></h2>
                </div>
            </div>
        </div>

        <div class='d-flex flex-column col-10 align-self-center align-self-md-start col-md-2'>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-danger rounded-pill mb-1" data-bs-toggle="modal" data-bs-target="#deleteModal">Supprimer</a> <!-- Affiche une box de confirmation -->
                <a class="btn btn-primary rounded-pill mb-1" href="{{ path ('app_artist_edit', {id: artist.id}) }}">Modifer</a>
            {% endif %}
        </div>
    </div>

    <div class="mt-2 row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-2 row-cols-xxl-6 justify-content-center justify-content-sm-start">
        {% for disc in discs %}
        <div class='col col-5'>
            <div class="card h-100 shadow">
                <div class='card-img-top ratio ratio-1x1'>
                    <img src="{{ asset ('images/disc/') }}{{ disc.picture }}" class="img-fluid" alt="{{ disc.title }}" title="{{ disc.title }}">
                </div>
                <div class="card-body p-2">
                    <h6 class="card-title">{{ disc.title }}</h6>
                </div>
                <a href="{{ path ('app_disc_show', {id: disc.id}) }}" class="stretched-link"></a>
            </div>
        </div>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Supprimer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Confirmer la suppression de '{{ artist.name }}' ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Annuler</button>
                {{ include('artist/_delete_form.html.twig') }}
            </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
