{% extends 'base.html.twig' %}
{% block title %}Velvet Record{% endblock %}
{% block body %}
<div class='container-fluid p-0'>
    <canvas class="d-none d-md-block w-100 s-bg-purple" height="75"></canvas>
</div>

<div class="container-xxl">
