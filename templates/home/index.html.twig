    <div class="col-10 mx-auto d-none d-md-block border border-dark rounded p-4 mt-5">
        <h2 class="text-center mb-4">Les derniers disques ajout√©s</h2>        
        <div class="row row-cols-5">
            {% for disc in discs %}
                <div class="col">
                    <div class="position-relative p-0 d-flex flex-column border border-dark rounded h-100">
                        <div class="ratio ratio-1x1">
                            <img src="{{ asset ('images/disc/') }}{{ disc.picture }}" class="img-fluid h-100 rounded-top" alt="{{ disc.title }}" title="{{ disc.title }}">
                        </div>
                        <div class="d-flex flex-column flex-grow-1 justify-content-between p-2">
                            <p class="h5">{{ disc.title }}</p>
                            <p class="fw-light">{{ disc.artist.name }}</p>
                        </div>
                        <a href="{{ path ('app_disc_show', {id: disc.id}) }}" class="stretched-link"></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
