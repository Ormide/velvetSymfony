{% extends 'base.html.twig' %}

{% block title %}{{ user.email }}{% endblock %}

{% block body %}
    <a class="btn btn-secondary my-1" href={{ path ('app_admin_user_index') }}>Retour</a>

    <div class='d-flex flex-column flex-md-row justify-content-md-between'> 
        <div class="md-me-2 text-center">
            <img class="rounded-circle" src="{{ asset ('images/profil/') }}{{ user.picture }}" alt="{{ user.email }}" title="{{ user.email }}" width='268' heigth='268'>
        </div>

        <div class='text-center'>
                <h1>{{ user.email }}</h1>
                <p>ID : {{ user.id }}</p>
                <p>Pr√©nom : {{ user.Firstname }}</p>
                <p>Nom de famille : {{ user.Lastname }}</p>
                <p>Roles : {{ user.roles ? user.roles|json_encode : '' }}</p>
        </div>

        <div class='d-flex flex-column col-md-2'>
                <a class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteModal">Supprimer</a> <!-- Affiche une box de confirmation -->
                <a class="btn btn-primary m-1" href="{{ path ('app_admin_user_edit', {id: user.id}) }}">Modifer</a>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Supprimer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Confirmer la suppression de '{{ user.email }}' ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            </div>
            </div>
        </div>
    </div>
{% endblock %}
