{% extends 'base.html.twig' %}
{% block title %}{{app.user.email}}{% endblock %}
{% block body %}
<div class='container-xxl'>
    <!--BreadCrumb-->
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb my-2">
            <li class="breadcrumb-item"><a href="{{ path ('home') }}">Acceuil</a></li>
            <li class="breadcrumb-item active">Vos informations</li>
        </ol>
    </nav>

    <div class='d-flex justify-content-center'>
        <div class='col-12 col-sm-10 col-md-6 p-4'>
            <div class='mx-auto' style='max-width:200px'>
                <img src='{{ asset('images/user/')}}{{ app.user.picture}}' class='img-fluid'>
            </div>
            <h1 class='text-center my-2'>{{ app.user.email }}</h1>
            <div class='d-flex justify-content-center'>
                {% if app.user.roles[0] == 'ROLE_SUPER' %}
                    <p class='badge bg-danger'>Super-Administrateur</p>
                {% elseif app.user.roles[0] == 'ROLE_ADMIN' %}
                    <p class='badge bg-warning'>Administrateur</p>
                {% else %}
                    <p class='badge bg-success'>Utilisateur</p>
                {% endif %}
            </div>
            <p class='rounded border border-dark p-2'>Pr√©nom : {{ app.user.firstname}}</p>
            <p class='rounded border border-dark p-2'>Nom : {{ app.user.lastname }}</p>
            <p class='rounded border border-dark p-2'>Date de naissance : {{ app.user.birthday|date("d/m/Y") }}</p>
            <a class='btn btn-outline-success rounded-pill mx-auto' href="{{ path('app_profil_edit', {'id': app.user.id}) }}">Modifier</a>
        </div>
    </div>
    <div class='d-flex justify-content-center mt-4'>
        
    </div>
</div>
{% endblock %}