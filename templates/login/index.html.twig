{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class='container-xxl'>
        <div class='d-flex flex-column flex-md-row align-items-center mt-5' style='height:500px;'>
            <div class='col-9 col-md-5'>
                <h1 class='text-center'>Se connecter</h1>
                <form class='mt-3' action="{{ path('app_login') }}" method="post">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com">
                        <label for="username">Adresse E-mail</label>
                    </div>
                    <div class="form-floating mt-3">
                        <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Password">
                        <label for="floatingPassword">Mot de passe</label>
                    </div>

                    <button class='btn btn-primary mt-3' type="submit">Se conncecter</button>
                </form>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>

            <div class='mx-auto vr d-none d-md-block'></div>

            <div class='col-md-5 text-center mt-5 md-mt-0'>
                <h2>Vous n'avez pas de compte ? Inscrivez-vous !</h2>
                <a href='{{ path('app_register')}}' class='btn btn-primary mt-3'>S'inscrire</a>
            </div>
        </div>
    </div>
{% endblock %}