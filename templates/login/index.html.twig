{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class='d-flex row pt-2 justify-content-center'>
        <h1 class="text-center">Connexion</h1>

        <div class='col-md-6'>
            <form action="{{ path('app_login') }}" method="post">
                <label class='form-label mb-2' for="username">Email:</label>
                <input class='form-control mb-2' type="text" id="username" name="_username" value="{{ last_username }}"/>

                <label class='form-label mb-2' for="password">Password:</label>
                <input class='form-control mb-2' type="password" id="password" name="_password"/>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
                <button class='btn btn-primary mb-2' type="submit">login</button>
            </form>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </div>
{% endblock %}