{% extends 'base.html.twig' %}

{% block title %}Discs{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between pt-2">
        <h1 class="my-auto ms-3">Liste des disques</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="my-auto me-3 btn btn-primary disctext" href={{ path ('app_disc_new') }}>Ajouter un nouveau disque</a>
        {% endif %}
    </div>

    <div class="d-flex justify-content-center flex-wrap mt-2">
        {% for disc in discs %}
            <div class="card m-2 shadow rounded" style="width: 19rem;">
                <img src="{{ asset ('images/disc/') }}{{ disc.picture }}" class="card-img-top" alt="{{ disc.title }}" title="{{ disc.title }}">
                <div class="card-body">
                    <h5 class="card-title">{{ disc.title }}</h5>
                    <p class="card-text m-0"><b>Artiste : </b>{{ disc.artist.name }}</p>
                    <p class="card-text m-0"><b>Label : </b>{{ disc.label }}</p>
                    <p class="card-text m-0"><b>Année : </b>{{ disc.year }}</p>
                    <p class="card-text m-0"><b>Genre : </b>{{ disc.genre }}</p>
                    <a href="{{ path ('app_disc_show', {id: disc.id}) }}" class="btn btn-primary mt-2">Détails</a>
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
