{% extends 'base.html.twig' %}

{% block title %}Discs{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between pt-2">
        <h1 class="my-auto">Liste des disques</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="my-auto btn btn-primary disctext" href={{ path ('app_disc_new') }}>Ajouter</a>
        {% endif %}
    </div>

    <div class="d-flex flex-wrap mt-2">
        {% for disc in discs %}
            <div class="d-flex col-md-6 my-1 p-0">
                <div class='col-5 p-0'>
                    <img class="img-fluid" src="{{ asset ('images/disc/') }}{{ disc.picture }}" alt="{{ disc.title }}" title="{{ disc.title }}" width="500" height="500">
                </div>
                <div class="d-flex flex-column flex-grow-1 mx-2 justify-content-between">
                    <div>
                        <p class="m-0 fw-bold">{{ disc.title }}</p>
                        <p class="m-0 fw-bold disctext">{{ disc.artist.name }}</p>
                        <p class="m-0 disctext"><b>Label : </b>{{ disc.label }}</p>
                        <p class="m-0 disctext"><b>Year : </b>{{ disc.year }}</p>
                        <p class="m-0 disctext"><b>Genre : </b>{{ disc.genre }}</p>
                    </div>
                    <div>
                        <a class="btn btn-primary disctext" href={{ path ('app_disc_show', {id: disc.id}) }}>DÃ©tails</a>
                    </div>    
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
