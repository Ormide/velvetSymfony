{% extends 'base.html.twig' %}

{% block title %}Disque{% endblock %}

{% block body %}
<canvas class="d-none d-md-block s-bg-purple w-100" height="20"></canvas>
<div class="container-xxl">

    <div class='d-flex justify-content-between mt-3'>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb  my-2">
                <li class="breadcrumb-item"><a href="{{ path ('home') }}">Acceuil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Disques</li>
            </ol>
        </nav>
        {% if is_granted('ROLE_ADMIN') %}
        <a class="my-auto btn btn-outline-dark rounded-pill disctext" href={{ path ('app_disc_new') }}>Ajouter un nouveau disque</a>
    {% endif %}
    </div>
    <div class="row row-cols-1 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 g-2 mt-2">
        {% for disc in discs %}
            <div class="col">
                <div class="position-relative d-flex flex-sm-column border border-dark rounded p-0 h-100">
                    <div class="ratio ratio-1x1">
                        <img src="{{ asset ('images/disc/') }}{{ disc.picture }}" class="img-fluid" alt="{{ disc.title }}" title="{{ disc.title }}">
                    </div>
                    <div class="col-8 col-md-12 col-sm-12 p-3 d-flex flex-column flex-grow-1 justify-content-sm-between">
                        <div>
                            <p class="h5 m-0">{{ disc.title }}</p>
                        </div>
                        <div>
                            <p class="fw-light m-0">{{ disc.artist }}</p>
                        </div>
                    </div>
                    <a href="{{ path ('app_disc_show', {id: disc.id}) }}" class="stretched-link"></a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
