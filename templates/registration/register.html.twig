{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}    
    <div class='container-xxl'>
        <div class='d-flex flex-column flex-md-row align-items-center mt-5' style='height:500px;'>
            <div class='col-9 col-md-5 text-center'>
                <h2>Vous avez déjà un compte ? Connectez-vous !</h2>
                <a href='{{ path('app_login')}}' class='btn btn-primary mt-3'>Se connecter</a>
            </div>
            <div class='mx-auto vr d-none d-md-block'></div>
            <div class='col-md-5 mt-5 md-mt-0'>
                <h1 class='text-center'>Inscription</h1>
                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div>
                        {{ form_label(registrationForm.email, 'Adresse E-mail')}}
                        {{ form_widget(registrationForm.email)}}
                        {{ form_errors(registrationForm.email)}}
                        {{ form_help(registrationForm.email)}}
                    </div>

                    <div class='mt-2'>
                        {{ form_label(registrationForm.password.first, 'Mot de passe')}}
                        {{ form_widget(registrationForm.password.first)}}
                        {{ form_errors(registrationForm.password.first)}}
                        {{ form_help(registrationForm.password.first)}}
                    </div>

                    <div class='mt-2'>
                        {{ form_label(registrationForm.password.second, 'Confirmer le Mot de passe')}}
                        {{ form_widget(registrationForm.password.second)}}
                        {{ form_errors(registrationForm.password.second)}}
                        {{ form_help(registrationForm.password.second)}}
                    </div>
                    
                    <div class='mt-2'>
                        {{ form_label(registrationForm.agreeTerms)}}
                        {{ form_errors(registrationForm.agreeTerms)}}
                        {{ form_widget(registrationForm.agreeTerms)}}
                        {{ form_help(registrationForm.agreeTerms)}}
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
