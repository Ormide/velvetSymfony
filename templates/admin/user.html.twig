{% extends 'base.html.twig' %}

{% block title %}Gérer les utilisateurs{% endblock %}

{% block body %}
<a class='btn btn-secondary my-3' href={{ path ('app_admin')}}>Retour</a>
<a class='btn btn-secondary my-3' href='#'>Créer un utilisateur</a>
<table class='table table-striped table-hover'>
    <thead class='table-primary'>
        <td>ID</td>
        <td>Email</td>
        <td>Role</td>
        <td>Plus</td>
    </thead>
    {% for user in user %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.Email }}</td>
            <td>
                {% for role in user.roles %}
                    {{ role }},
                {% endfor %}
            </td>
            <td>
                <a href={{ path ('app_admin_user_show', {'id': user.id}) }}>Afficher</a>
                <a href='#'>Modifier</a>
                <a href='#'>Supprimer</a>
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}